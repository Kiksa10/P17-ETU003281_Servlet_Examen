<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaeehttp://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="6.0">

    <!-- Configuration d'une servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.java.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>credit</servlet-name>
        <servlet-class>main.java.servlet.CreditServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>gestionCredit</servlet-name>
        <servlet-class>main.java.servlet.GestionCreditServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>insertDep</servlet-name>
        <servlet-class>main.java.servlet.DepenseServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>main.java.servlet.DashBoardServlet</servlet-class>
    </servlet>

      <servlet>
        <servlet-name>insertCred</servlet-name>
        <servlet-class>main.java.servlet.SendRedirectServlet</servlet-class>
    </servlet>


    <!-- Mapping de la servlet -->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>credit</servlet-name>
        <url-pattern>/credit</url-pattern>
    </servlet-mapping>

     <servlet-mapping>
        <servlet-name>gestionCredit</servlet-name>
        <url-pattern>/gestionCredit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>insertDep</servlet-name>
        <url-pattern>/insertDep</url-pattern>
    </servlet-mapping>

      <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>insertCred</servlet-name>
        <url-pattern>/insertCred</url-pattern>
    </servlet-mapping>


</web-app>

<!-- SCRIPT: javac -cp 'lib/servlet-api.jar' -d src/main/java/classes src/main/java/hello/HelloWorldServlet.java  -->
